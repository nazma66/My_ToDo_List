<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.Theme.My_ToDo_List">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#EFDBE2"
            app:popupTheme="@style/Base.Theme.My_ToDo_List" />
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textSize="35sp"
        android:text="My tasks"
        android:textAlignment="center">

    </TextView>



    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#B6D0EA"
        android:dividerHeight="4dp"
        android:listSelector="#629AD3"
        android:cacheColorHint="#9C27B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textSize="35sp"
        android:text="Completed Task"
        android:textAlignment="center">

    </TextView>

    <ListView
        android:id="@+id/lv2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#DDBAE3"
        android:dividerHeight="4dp"
        android:listSelector="#B96CC6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825" />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginVertical="650dp"
        android:layout_gravity="center"
        android:onClick="onAddButtonClick"
        android:textAlignment="center"
        android:text="+"
        android:textSize="70sp" />




</LinearLayout>